{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/server.js" },

    { "src": "/assets/(.*)", "dest": "frontend/dist/assets/$1" },

    { "handle": "filesystem" },

    { "src": "/(.*)", "dest": "frontend/dist/index.html" }
  ]
}